<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/connectView">

    <fragment
        android:id="@+id/connectView"
        android:name="com.mtkreader.views.fragments.ConnectView"
        android:label="ConnectFragment"
        tools:layout="@layout/fragment_connect">
        <action
            android:id="@+id/navigateToReadingView"
            app:destination="@id/readingView"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/navigateToDisplayTimeView"
            app:destination="@id/displayTimeView"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/navigateToDisplayDataView"
            app:destination="@id/displayDataView"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
        <action
            android:id="@+id/navigateToParamsWriteView"
            app:destination="@id/paramWriteView"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <fragment
        android:id="@+id/readingView"
        android:name="com.mtkreader.views.fragments.ReadingView"
        android:label="ReadingFragment"
        tools:layout="@layout/fragment_reading">
        <action
            android:id="@+id/navigateToDisplayDataView"
            app:destination="@id/displayDataView"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit"
            app:popUpTo="@id/connectView" />
    </fragment>
    <fragment
        android:id="@+id/displayDataView"
        android:name="com.mtkreader.views.fragments.DisplayDataView"
        android:label="DisplayDataView"
        tools:layout="@layout/fragment_display_data" />
    <fragment
        android:id="@+id/displayTimeView"
        android:name="com.mtkreader.views.fragments.TimeView"
        android:label="DisplayTimeView"
        tools:layout="@layout/fragment_time" />

    <fragment
        android:id="@+id/paramWriteView"
        android:name="com.mtkreader.views.fragments.ParamsWriteView"
        android:label="ParamsWriteView"
        tools:layout="@layout/fragment_file_pick">
        <action
            android:id="@+id/navigateToDisplayDataView"
            app:destination="@id/displayDataView"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit" />
    </fragment>

</navigation>
