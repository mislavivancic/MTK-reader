<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/connectFragment">

    <fragment
        android:id="@+id/connectFragment"
        android:name="com.mtkreader.views.fragments.ConnectFragment"
        android:label="ConnectFragment"
        tools:layout="@layout/fragment_connect">
        <action
            android:id="@+id/navigateToReadingFragment"
            app:destination="@id/readingFragment"
            app:enterAnim="@anim/slide_in_from_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@anim/slide_in_from_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/readingFragment"
        android:name="com.mtkreader.views.fragments.ReadingFragment"
        android:label="ReadingFragment"
        tools:layout="@layout/fragment_reading" />
</navigation>