<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MediumTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="MediumTextViewStyleBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MediumTextViewStyleWhite" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="MediumTextViewStyleBoldWhite" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="LargeTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="LargeTextViewStyleBold" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LargeTextViewStyleWhite" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="LargeTextViewStyleBoldWhite" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MtkButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/dark_gray</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MtkButtonCommand" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MtkButtonRetry" parent="Widget.AppCompat.Button">
        <item name="background">@color/blood_red</item>
        <item name="colorButtonNormal">@color/blood_red</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>